{% macro homepagecard(title="",description="",ctaText="",imageURL="") %}
<div class="kb-hpcard cardClickContainer">
    <div class="kb-hpcard-img-container" style="background-image: url('{{imageURL}}')">
        <img src="{{imageURL}}" />
    </div>
    <h3 class="kb-section-heading kb-hpcard-title">{{title}}</h3>
    <div class="kb-hpcard-description">{{description}}</div>
    <a href="http://google.com" class="kb-hpcard-cta cardClickAction">{{ctaText}}</a>
</div>
{% endmacro %}